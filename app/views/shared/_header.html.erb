<header class="bg-indigo-400 text-white p-4 sticky top-0">
  <div class="max-w-7xl mx-auto flex flex-wrap justify-between items-center">
    <!-- Left Section: Blog Title -->
    <div class="flex items-center space-x-4">
      <h1 class="text-xl sm:text-2xl font-bold">
        BlogApp
      </h1>

      <!-- Show navigation if the user is logged in -->
      <% if user_signed_in? %>
        <nav class="hidden sm:flex space-x-4">
          <%= link_to 'Posts', posts_path, class: "hover:text-gray-300" %>
          <%= link_to 'Add Post', new_post_path, class: "hover:text-gray-300" %>
        </nav>
      <% end %>
    </div>

    <!-- Right Section: User info and log out if signed in -->
    <% if user_signed_in? %>
      <div class="flex items-center space-x-4 mt-4 sm:mt-0">
        <span class="text-sm"><%= current_user.email %></span>
        <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: "bg-red-500 px-4 py-2 rounded hover:bg-red-600 text-white" %>
      </div>
    <% end %>
  </div>

  <!-- Mobile Navigation -->
  <% if user_signed_in? %>
    <div class="sm:hidden mt-2">
      <nav class="space-y-2">
        <%= link_to 'Posts', posts_path, class: "block hover:text-gray-300" %>
        <%= link_to 'Add Post', new_post_path, class: "block hover:text-gray-300" %>
      </nav>
    </div>
  <% end %>
</header>
