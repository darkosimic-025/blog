<main class="max-w-4xl w-full mx-auto p-6 mt-8">
  <header class="mb-6 w-full">
    <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @post.title %></h1>

    <% if @post.image.attached? %>
      <%= image_tag url_for(@post.image), class: "w-full h-auto" %>
    <% end %>


    <div class="prose prose-lg max-w-none text-gray-900 mb-6 w-full">
      <%= simple_format(@post.body) %>
    </div>

    <div class="flex items-center justify-between space-x-4 text-gray-600 w-full">
      <p class="text-sm">
        Published on <time datetime="<%= @post.created_at.strftime('%Y-%m-%d') %>"><%= @post.created_at.strftime("%B %d, %Y") %></time>
      </p>
      <div class="flex items-center space-x-4">
        <div id="likes_count">
          <%= render 'posts/likes_count', post: @post %>
        </div>
        <p class="text-sm">â€¢</p>
        <div id="comments_count">
          <%= render 'posts/comments_count', post: @post %>
        </div>
      </div>
    </div>

    <div class="mt-4 w-full">
      <%= render 'posts/like_button', post: @post %>
    </div>
  </header>

  <%= render 'comments/form', post: @post, comment: Comment.new %>

  <div id="comments" class="mt-8 prose max-w-none w-full">
    <%= render @post.comments %>
  </div>
</main>
