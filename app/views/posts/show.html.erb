<main class="max-w-4xl mx-auto p-6">
  <header class="mb-6">
    <h1 class="text-4xl font-bold text-gray-900 mb-4"><%= @post.title %></h1>

    <!-- Dodaj tekst posta ovde -->
    <div class="mb-6 text-gray-900">
      <%= simple_format(@post.body) %> <!-- simple_format čuva osnovnu formatiranost (npr. nove redove) -->
    </div>

    <div class="flex items-center space-x-4 text-gray-600">
      <p class="text-sm">
        Published on <time datetime="<%= @post.created_at.strftime('%Y-%m-%d') %>"><%= @post.created_at.strftime("%B %d, %Y") %></time>
      </p>
      <p class="text-sm">•</p>
      <div id="likes_count">
        <%= render 'posts/likes_count', post: @post %>
      </div>
      <p class="text-sm">•</p>

      <div id="comments_count_frame">
        <%= render 'posts/comments_count', post: @post %>
      </div>
    </div>
    <div class="mt-4">
      <%= render 'posts/like_button', post: @post %>
    </div>
  </header>

  <%= render 'comments/form', post: @post %>

  <div id="comments">
    <%= render @post.comments %>
  </div>
</main>
