<main class="max-w-4xl w-full mx-auto p-6 mt-8">
  <header class="mb-6">
    <h1 class="text-2xl font-bold mb-6">Create a New Post</h1>

    <%= form_with model: @post, local: true, multipart: true do |form| %> <!-- Dodaj multipart: true za upload fajlova -->
      <% if @post.errors.any? %>
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= form.label :title, "Post Title", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :title, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div class="mb-4">
        <%= form.label :body, "Post Body", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :body, rows: 5, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
      </div>

      <div class="mb-4">
        <%= form.label :image, "Upload Image", class: "block text-sm font-medium text-gray-700" %>
        <%= form.file_field :image, class: "block w-full mt-1" %>
      </div>

      <div class="flex justify-end">
        <%= form.submit "Create Post", class: "px-4 py-2 bg-blue-600 text-white rounded-md" %>
      </div>
    <% end %>
  </header>
</main>
