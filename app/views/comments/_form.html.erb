<%= form_with model: [post, Comment.new], id: "new_comment", local: false, data: { action: "turbo:submit-end->new_comment#reset" } do |form| %>
  <div class="mb-4">
    <%= form.label :body, "Add a comment", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :body, rows: 3, class: "block w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Submit", class: "px-4 py-2 bg-blue-600 text-white rounded-md" %>
  </div>
<% end %>
